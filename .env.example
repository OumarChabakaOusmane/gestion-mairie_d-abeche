# Server Configuration
PORT=3000
NODE_ENV=development
CORS_ORIGIN=http://localhost:3000

# Database
MONGODB_URI=mongodb://localhost:27017/mairie
MONGODB_TEST_URI=mongodb://localhost:27017/mairie

# Authentication
JWT_SECRET=change_me_in_production
JWT_EXPIRES_IN=7d
JWT_COOKIE_EXPIRES=7

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false  # true for 465, false for other ports
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
EMAIL_FROM=noreply@mairie-abeche.td
EMAIL_FROM_NAME="Mairie d'Abéché"

# Frontend URLs
FRONTEND_URL=http://localhost:3000
PASSWORD_RESET_URL=/reset-password

# File Uploads
MAX_FILE_UPLOAD=10 # in MB
FILE_UPLOAD_PATH=./public/uploads

# Session
SESSION_SECRET=your_session_secret

# Logging
LOG_LEVEL=info
